CC		:= gcc
CFLAGS	:= -Wall -Wextra -Werror
LDFLAGS	:= -lgmp
SRC		:= primality
NAME	:= isprime

all: $(NAME)

clean:
	rm -rf $(NAME) src/*.o

re: clean all

src/%.o: src/%.c inc/%.h
	$(CC) $(CFLAGS) -c -I./inc $< -o $@

$(NAME): src/main.c src/$(SRC).o inc/$(SRC).h
	$(CC) $(CFLAGS) -I./inc $^ -o $@ $(LDFLAGS)

test: $(NAME)
	@echo "$@ 1 (fermat 6 digits): true expected"
	@./$< fermat 763753 100000
	@echo "$@ 1 (fermat 64 digits): false expected"
	@./$< fermat 7638672782674857234565487354785425875427849456726567325663597753 500
	@echo "$@ 2 (fermat 386 digits): true expected"
	@./$< fermat  128
	@echo "$@ 1 (miller-rabin 12 digits): true expected"
	@./$< miller-rabin 856734888811 1000
	@echo "$@ 1 (miller-rabin 386 digits): false expected"
	@./$< miller-rabin  500
	@echo "$@ 1 (miller-rabin 2993 digits): true expected"
	@./$< miller-rabin  4

.PHONY: all clean re test
